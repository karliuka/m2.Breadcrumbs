<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <!--
    Handle from all pages
    -->
    <update handle="breadcrumbs_home"/>
    <!--
    layout for email to friend page
    -->
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb" ifconfig="design/breadcrumbs/breadcrumbs_enabled">
                <argument name="crumbName" xsi:type="string">email.friend</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Email to a Friend</item>
                    <item name="label" xsi:type="string" translate="true">Email to a Friend</item>
                    <item name="last" xsi:type="boolean">true</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
